<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorToolBar">

            <ImageView
                android:id="@+id/image_meme_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:scaleType="center"/>

            <TextView
                android:text="text"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/tv_memeTitle_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="9dp"
                style="@style/textMemeCellTitle"
                android:layout_below="@+id/image_meme_widget"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_memeTitle_widget"
                android:orientation="horizontal"
                android:padding="15dp">

                <Button
                    android:id="@+id/btn_favorite_widget"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/favorite"/>

                <Button
                    android:id="@+id/btn_share_widget"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/share"/>

            </LinearLayout>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>